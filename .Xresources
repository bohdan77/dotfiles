
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight


! Set the font
URxvt.font:             xft:Ubuntu Mono:style=Regular:pixelsize=15
URxvt*boldFont: xft:RobotoMono:pixelsize=12:antialias=true

! Increase line spacing
! URxvt*lineSpace: 1

! Terminal window size
URxvt*geometry: 85x25

! Disable scrollbar
URxvt.scrollBar: false

! Set urxvt as login shell
URxvt*loginShell: true

! Set terminal padding
URxvt.internalBorder: 15

! Enables copy/paste with Ctrl-C/V
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.perl-ext-common: default,clipboard
URxvt.keysym.Control-C: perl:clipboard:copy
URxvt.keysym.Control-V: perl:clipboard:paste

! Size of cursor
Xcursor.size: 16

! Colors {{{

! special
*.foreground:   #f0f0f0
*.background:   #232c33
*.cursorColor:  #f0f0f0

! black
! Second black is grey
*.color0:       #232c33
*.color8:       #70838c

! red
*.color1:       #99736e
*.color9:       #99736e

! green
*.color2:       #78a090
*.color10:      #78a090

! yellow
*.color3:       #bfb7a1
*.color11:      #bfb7a1

! blue
*.color4:       #7c9fa6
*.color12:      #7c9fa6

! magenta
*.color5:       #BF9C86
*.color13:      #BF9C86

! cyan
*.color6:       #99BFBA
*.color14:      #99BFBA

! white
*.color7:       #f0f0f0
*.color15:      #f0f0f0

! }}}

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.color-enabled: true
rofi.color-window: #393939, #393939, #268bd2
rofi.color-normal: #393939, #ffffff, #393939, #268bd2, #ffffff
rofi.color-active: #393939, #268bd2, #393939, #268bd2, #205171
rofi.color-urgent: #393939, #f3843d, #393939, #268bd2, #ffc39c

